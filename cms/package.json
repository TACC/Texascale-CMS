{
  "name": "@tacc/texascale-cms",
  "version": "1.2.2",
  "license": "MIT",
  "author": "TACC COA CMD <coa-cmd@tacc.utexas.edu>",
  "contributors": [
    "TACC ACI WMA <wma-portals@tacc.utexas.edu>"
  ],
  "description": "The TACC CMD custom assets used by Texaascale website.",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TACC/Texascale-CMS.git"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:sass",
    "build:css": "./bin/build-css.js",
    "build:sass": "npx sass --pkg-importer=node --quiet-deps ./src/taccsite_custom/texascale_cms/static/texascale_cms/css/bootstrap/bootstrap-v4.custom.scss ./src/taccsite_custom/texascale_cms/static/texascale_cms/css/bootstrap/bootstrap-v4.custom.css --style compressed",
    "build:dev": "npm run build -- --quiet && npm run collectstatic",
    "collectstatic": "docker-compose exec cms python3 manage.py collectstatic --noinput --verbosity=1 2>&1 | grep -v 'Found another file'",
    "watch": "npm-watch"
  },
  "homepage": "https://texascale.org",
  "dependencies": {
    "@tacc/core-styles": "^2.45.0"
  },
  "devDependencies": {
    "bootstrap": "4.6.x",
    "npm-watch": "^0.13.0",
    "sass": "^1.92.0"
  },
  "watch": {
    "build:dev": {
      "patterns": "src/**/static/**/*",
      "extensions": "css,postcss"
    }
  }
}
